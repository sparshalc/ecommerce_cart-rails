<style>

</style>
<header class="p-3 text-bg-dark">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="/products" class="nav-link px-2 text-white">RailsEcommerce</a></li>
          <% if user_signed_in? %>
            <li><a href="/products/new" class="nav-link text-white">Add</a></li>
          <% end %>
        </ul>
        <% if user_signed_in? %>
          <form class="col-4 col-lg-auto  mb-lg-0 me-lg-3" role="search">
              <%= search_form_for @q, data: {turbo_frame: :results} do |f| %>
                <%= f.search_field :name_cont, oninput: 'this.form.requestSubmit()',:placeholder => 'Search...',class:'form-control' %>
              <% end %>
          </form>
        <% end %>
        <% if user_signed_in? %>
        <div class="ql">
          <div class="cart mx-3">
            <% if @cart.orderables.count == 0%>
            <% else %>
            <%= link_to cart_path,class:' btn btn-dark' do%>
                <i class="fa fa-lg fa-shopping-cart"></i>
              <% end %>
            <% end %>
          </div>
          
          
        </div>
        <% end %>
        <% if user_signed_in? %>
        <div class="dropdown">
          <button class="btn btn-dark dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <%= current_user.email %>
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to 'Edit', edit_user_registration_path,class:"dropdown-item"%></li>
            
           <li> <%= button_to 'Logout',destroy_user_session_path,class:'dropdown-item text-danger',method: :delete%></li>
          </ul>
        </div>
        <div class="text-end">
       
        </div>
        <% else %>
        <div class="text-end">
          <%= link_to 'Login',user_session_path,class: "btn btn-warning me-2"%>
          <%= link_to 'SignUp',new_user_registration_path,class: "btn btn-outline-light me-2"%>
        </div>
        <% end %>


      </div>
    </div>
  </header>



