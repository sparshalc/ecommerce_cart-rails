
<div class="container  align-items-center rounded-3 border shadow-lg">
    <div class="row align-items-center g-lg-5 py-5">
      <div class="col-lg-7 text-center text-lg-start">
        <h1 class="display-4 fw-bold lh-1 mb-3">Add a Review</h1>
        <p class="col-lg-10 fs-4">Lorem ipsum dolor sit amet consectetur adipisicing elit. Ullam ab sint, quae magnam pariatur voluptatum consequuntur?</p>
      </div>
      <div class="col-md-10 mx-auto col-lg-5">
            <%= form_for([@product, @product.comments.build]) do |f|%>
            <form class="p-4 p-md-5 border rounded-3 bg-light">
                <div class="form-floating mb-3"> 
                    <%= f.text_field :title,class: 'form-control'%>
                </div>
                <%= f.submit class: 'w-100 btn btn-lg btn-dark'%>
                <hr class="my-4">
                <small class="text-muted">You are currently interacting as <%= current_user.email%></small>
                </form>
                <% end %>
        </div>
    </div>
  </div>