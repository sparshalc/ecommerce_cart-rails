
    



<div class="container">
  <div class="my-3 p-3 bg-body rounded shadow-sm">
    <% if @comment.count == 0%>
        <h6 style="opacity: 0.8;",class="border-bottom pb-2 mb-0">No Recent reviews</h6>
    <% else %>
        <h6 class="border-bottom pb-2 mb-0"><%= @comment.count %> Recent reviews</h6>
    <% end %>
    <% @comment.each do |x|%>
        <div class="d-flex text-muted pt-3">
        <svg class="bd-placeholder-img flex-shrink-0 me-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: 32x32" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"></rect><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>

        <div class="pb-3 mb-0 small lh-sm border-bottom w-100">
            <div class="d-flex justify-content-between">
            <strong class="text-gray-dark">    <%= x.user.email %></strong>
            <% if current_user.id == x.user.id%>
                <%= button_to [x.product, x],class: 'btn text-danger',method: :delete do%>
                    <i class="fa fa-lg fa-trash"></i>  
                <% end %>
            <% end %>
            </div>
            <span class="d-block"><%= x.title %>  |  <%= time_ago_in_words(x.created_at)+ ' ago'%></span>
        </div>
        </div>
    <% end %>
  </div>
</div>